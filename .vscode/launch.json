{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug cub3d (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3d",
            "args": ["maps/file.cub"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing"
                },
                {
                    "description": "Load project gdb script (.vscode/gdbinit)",
                    "text": "source .vscode/gdbinit"
                }
            ],
            "preLaunchTask": "Build cub3d"
        }
    ]
}
